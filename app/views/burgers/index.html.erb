<header style="background-color: <%= two_colors[0] %>;">
  <h1>Hamburger Restaurants</h1>
</header>

<div class="burgers">
<% @burgers.each do |burger| %>
  <div class="burger">
    <h3><%= [true, false].sample ? "local" : "favorite"  %></h3>
    <p>
      <%= link_to burger["name"], burger["url"] %>
    </p>
  </div>
<% end %>
</div>
